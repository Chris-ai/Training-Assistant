<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/back"
                    android:gravity="center"
                    android:orientation="vertical">
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>



    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Informations -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_row"
            android:layout_marginEnd="@dimen/margin_row">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_header"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/profile_text"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_top_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/small_padding"
                    android:hint="@string/profile_text2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_top_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/small_padding">

                <TextView
                    android:id="@+id/profile_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:textStyle="bold"
                    android:paddingEnd="@dimen/small_padding"
                    android:text="@string/choose_gender" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:hint="@string/gender"/>

            </LinearLayout> <!-- Gender -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/small_padding">

                <TextView
                    android:id="@+id/profile_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:textStyle="bold"
                    android:paddingEnd="@dimen/small_padding"
                    android:text="@string/age" />

                <TextView
                    android:id="@+id/how_many_years"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:hint="@string/how_many"/>

            </LinearLayout> <!-- Age -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/small_padding">

                <TextView
                    android:id="@+id/profile_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_top_size"
                    android:paddingEnd="@dimen/small_padding"
                    android:text="@string/weight" />

                <TextView
                    android:id="@+id/how_many_kg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:hint="@string/how_many_kg"/>

            </LinearLayout> <!-- Weight -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingEnd="@dimen/small_padding"
                    android:textSize="@dimen/text_top_size"
                    android:text="@string/height" />

                <TextView
                    android:id="@+id/how_many_cm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:hint="@string/how_many_cm"/>

            </LinearLayout> <!-- Height -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_button"
                    android:text="@string/button_edit"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout> <!-- Edit button -->


        </LinearLayout>
    </ScrollView>


</RelativeLayout>