<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/profile_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/profile_icon_size"
                        android:layout_height="@dimen/profile_icon_size"
                        android:src="@drawable/profile_header" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="@string/profile_text"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_top_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/surname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/small_padding"
                            android:hint="@string/profile_text2"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_top_size"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <!-- Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_icon_size"
                    android:layout_marginStart="@dimen/margin_row"
                    android:layout_marginTop="@dimen/lindear_under_background"
                    android:layout_marginEnd="@dimen/margin_row"
                    android:orientation="horizontal">

                    <!-- Row 1-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/margin_beetween"
                        app:cardBackgroundColor="@color/custom_cardview_background"
                        app:cardCornerRadius="@dimen/corner">

                        <TextView
                            android:id="@+id/profile_training"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/how_many_trainings"
                            android:layout_gravity="center"
                            android:textColor="@color/textColor"
                            android:textStyle="bold"
                            android:textSize="@dimen/image_text_size"/>

                        <TextView
                            android:id="@+id/profile_how_many_trainings"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="@string/training_counts"
                            android:textColor="@color/textColor"
                            android:layout_gravity="center"
                            android:layout_below="@id/profile_training"
                            android:layout_marginTop="@dimen/padding"
                            android:textSize="@dimen/size"/>

                    </androidx.cardview.widget.CardView>
                    <!-- Row 2-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginEnd="@dimen/margin_beetween"
                        app:cardBackgroundColor="@color/custom_cardview_background"
                        app:cardCornerRadius="@dimen/corner">

                        <TextView
                            android:id="@+id/profile_BMI"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/BMI_text"
                            android:textColor="@color/textColor"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/image_text_size"/>

                        <TextView
                            android:id="@+id/profile_how_many_BMI"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:hint="@string/BMI"
                            android:layout_gravity="center"
                            android:textColor="@color/textColor"
                            android:layout_below="@id/profile_BMI"
                            android:layout_marginTop="@dimen/image_text_size"
                            android:textSize="@dimen/size"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>



    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Other -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_row"
            android:layout_marginEnd="@dimen/margin_row">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/small_padding">

                <TextView
                    android:id="@+id/profile_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:textStyle="bold"
                    android:paddingEnd="@dimen/small_padding"
                    android:text="@string/choose_gender" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:hint="@string/gender"/>

            </LinearLayout> <!-- Gender -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/small_padding">

                <TextView
                    android:id="@+id/profile_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:textStyle="bold"
                    android:paddingEnd="@dimen/small_padding"
                    android:text="@string/age" />

                <TextView
                    android:id="@+id/how_many_years"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:hint="@string/how_many"/>

            </LinearLayout> <!-- Age -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/small_padding">

                <TextView
                    android:id="@+id/profile_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_top_size"
                    android:paddingEnd="@dimen/small_padding"
                    android:text="@string/weight" />

                <TextView
                    android:id="@+id/how_many_kg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:hint="@string/how_many_kg"/>

            </LinearLayout> <!-- Weight -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingEnd="@dimen/small_padding"
                    android:textSize="@dimen/text_top_size"
                    android:text="@string/height" />

                <TextView
                    android:id="@+id/how_many_cm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_top_size"
                    android:hint="@string/how_many_cm"/>

            </LinearLayout> <!-- Height -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_edit"/>

            </LinearLayout> <!-- Edit button -->


        </LinearLayout>
    </ScrollView>


</RelativeLayout>