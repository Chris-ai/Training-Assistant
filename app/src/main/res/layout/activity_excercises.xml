<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExcercisesActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/small_padding">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/small_corner"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/padding"
                        android:layout_marginTop="@dimen/padding"
                        app:cardBackgroundColor="@color/custom_cardview_background">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/shoudlers"
                                    android:layout_width="@dimen/size"
                                    android:layout_height="@dimen/size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/shoulders" />

                                <TextView
                                    android:id="@+id/shoulders_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/shoulders"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/text_excercises"
                                    android:textColor="@color/textColor"
                                    android:layout_marginStart="@dimen/small_padding"/>

                            </LinearLayout>
                            <Button
                                android:id="@+id/shoulders_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView> <!-- Shoulders -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/small_corner"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/padding"
                        android:layout_marginTop="@dimen/padding"
                        app:cardBackgroundColor="@color/custom_cardview_background">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/back_id"
                                    android:layout_width="@dimen/size"
                                    android:layout_height="@dimen/size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/back_muscle" />

                                <TextView
                                    android:id="@+id/back_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/back"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/text_excercises"
                                    android:textColor="@color/textColor"
                                    android:layout_marginStart="@dimen/small_padding"/>

                            </LinearLayout>
                            <Button
                                android:id="@+id/back_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView> <!-- Back -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/small_corner"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/padding"
                        android:layout_marginTop="@dimen/padding"
                        app:cardBackgroundColor="@color/custom_cardview_background">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/chest"
                                    android:layout_width="@dimen/size"
                                    android:layout_height="@dimen/size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/chest" />

                                <TextView
                                    android:id="@+id/chest_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/chest"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/text_excercises"
                                    android:textColor="@color/textColor"
                                    android:layout_marginStart="@dimen/small_padding"/>

                            </LinearLayout>
                            <Button
                                android:id="@+id/chest_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView> <!-- Chest -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/small_corner"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/padding"
                        android:layout_marginTop="@dimen/padding"
                        app:cardBackgroundColor="@color/custom_cardview_background">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/arm_id"
                                    android:layout_width="@dimen/size"
                                    android:layout_height="@dimen/size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/biceps" />

                                <TextView
                                    android:id="@+id/arm_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/arms"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/text_excercises"
                                    android:textColor="@color/textColor"
                                    android:layout_marginStart="@dimen/small_padding"/>

                            </LinearLayout>
                            <Button
                                android:id="@+id/arm_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView> <!-- Arms -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/small_corner"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/padding"
                        android:layout_marginTop="@dimen/padding"
                        app:cardBackgroundColor="@color/custom_cardview_background">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/abs_id"
                                    android:layout_width="@dimen/size"
                                    android:layout_height="@dimen/size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/abs" />

                                <TextView
                                    android:id="@+id/abs_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/ABS"
                                    android:textSize="@dimen/text_excercises"
                                    android:textColor="@color/textColor"
                                    android:layout_marginStart="@dimen/small_padding"/>

                            </LinearLayout>
                                <Button
                                    android:id="@+id/abs_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView> <!-- Abs -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/small_corner"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/padding"
                        android:layout_marginTop="@dimen/padding"
                        app:cardBackgroundColor="@color/custom_cardview_background">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/legs"
                                    android:layout_width="@dimen/size"
                                    android:layout_height="@dimen/size"
                                    android:layout_gravity="center"
                                    android:src="@drawable/legs" />

                                <TextView
                                    android:id="@+id/legs_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/legs"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/text_excercises"
                                    android:textColor="@color/textColor"
                                    android:layout_marginStart="@dimen/small_padding"/>

                            </LinearLayout>
                            <Button
                                android:id="@+id/legs_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"/>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView> <!-- Legs -->


                    <TextView
                        android:layout_marginTop="@dimen/lindear_under_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginStart="@dimen/small_padding"
                        android:layout_marginEnd="@dimen/small_padding"
                        android:textSize="@dimen/warning_size"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/warning_excercise"
                        />

                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>




    </ScrollView>


</LinearLayout>