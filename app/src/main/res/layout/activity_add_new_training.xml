<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNewTraining">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/InputTextLayout"
        android:layout_marginTop="@dimen/excercise_list_start"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginLeft="@dimen/padding"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <EditText
        android:id="@+id/edit_name_training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/training_name"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_add_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginEnd="@dimen/padding"
        android:text="@string/button_save"/>
</LinearLayout>