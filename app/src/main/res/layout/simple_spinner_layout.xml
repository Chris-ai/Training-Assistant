<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/excercise_name_in_spinner"
        android:layout_marginTop="@dimen/corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/ButoonsColor"
        android:layout_marginStart="@dimen/padding"/>

    <TextView
        android:id="@+id/which_muscle_parts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding"/>

    <TextView
        android:id="@+id/desctripction"
        android:layout_marginTop="@dimen/small_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding"/>

</LinearLayout>