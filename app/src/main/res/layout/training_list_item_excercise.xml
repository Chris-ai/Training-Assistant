<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/excerciseNAME"
        android:layout_marginTop="@dimen/corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/excercise_name"
        android:layout_marginStart="@dimen/padding"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/excercise_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/how_many_reps"
            android:layout_marginStart="@dimen/padding"/>

        <TextView
            android:id="@+id/series_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_corner"
            android:hint="@string/how_many_reps_number"/>


    </LinearLayout>

    <View
        android:id="@+id/excercise_endline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/small_corner"
        android:background="@color/light_dark"
        android:layout_marginStart="@dimen/padding"
        android:layout_marginEnd="@dimen/padding"/>

</LinearLayout>